<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the suit:"
        android:textSize="40sp"
        android:id="@+id/ChooseSuitText"
        android:paddingBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="A"
        android:textSize="30sp"
        android:id="@+id/Ace"
        android:layout_below="@id/ChooseSuitText"
        android:layout_alignParentLeft="true"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="2"
        android:textSize="30sp"
        android:id="@+id/Two"
        android:layout_below="@id/ChooseSuitText"
        android:layout_toRightOf="@id/Ace"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="3"
        android:textSize="30sp"
        android:id="@+id/Three"
        android:layout_below="@id/ChooseSuitText"
        android:layout_toRightOf="@id/Two"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="4"
        android:textSize="30sp"
        android:id="@+id/Four"
        android:layout_below="@id/Ace"
        android:layout_alignParentLeft="true"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="5"
        android:textSize="30sp"
        android:id="@+id/Five"
        android:layout_below="@id/Two"
        android:layout_toRightOf="@id/Four"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="6"
        android:textSize="30sp"
        android:id="@+id/Six"
        android:layout_below="@id/Three"
        android:layout_toRightOf="@id/Five"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="7"
        android:textSize="30sp"
        android:id="@+id/Seven"
        android:layout_below="@id/Four"
        android:layout_alignParentLeft="true"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="8"
        android:textSize="30sp"
        android:id="@+id/Eight"
        android:layout_below="@id/Five"
        android:layout_toRightOf="@id/Seven"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="9"
        android:textSize="30sp"
        android:id="@+id/Nine"
        android:layout_below="@id/Six"
        android:layout_toRightOf="@id/Eight"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="10"
        android:textSize="30sp"
        android:id="@+id/Ten"
        android:layout_below="@id/Seven"
        android:layout_alignParentLeft="true"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="J"
        android:textSize="30sp"
        android:id="@+id/Jack"
        android:layout_below="@id/Eight"
        android:layout_toRightOf="@id/Ten"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="Q"
        android:textSize="30sp"
        android:id="@+id/Queen"
        android:layout_below="@id/Nine"
        android:layout_toRightOf="@id/Jack"/>
    <Button
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="K"
        android:textSize="30sp"
        android:id="@+id/King"
        android:layout_below="@id/Jack"
        android:layout_toRightOf="@id/Ten"/>
    <Button
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="15sp"
        android:id="@+id/BackButton"
        android:layout_below="@id/King"/>
</RelativeLayout>